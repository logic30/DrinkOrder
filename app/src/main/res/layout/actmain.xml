                   android:gravity="left"
                   android:text="加料" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lblSum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f77"
                    android:gravity="left"
                    android:maxWidth="180sp"
                    android:maxHeight="40sp"
                    android:minWidth="140sp"
                    android:minHeight="40sp"
                    android:text="0" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="232dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胖胖杯" />


        </LinearLayout>


    </LinearLayout>


